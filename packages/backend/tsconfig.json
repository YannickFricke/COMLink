{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "ES2015",
            "DOM"
        ],
        "outDir": "./dist/",
        "rootDir": "./src/",
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "@comlink/framework/*": [
                "../framework/*"
            ]
        },
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "references": [
        {
            "path": "../framework/tsconfig.json"
        }
    ]
}
