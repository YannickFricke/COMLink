{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "jsx": "react",
        "outDir": "./dist/",
        "rootDir": "./src/",
        "baseUrl": "./",
        "paths": {
            "@comlink/framework/*": ["../framework/*"]
        },
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "references": [
        {
            "path": "../framework/tsconfig.json"
        }
    ]
}
